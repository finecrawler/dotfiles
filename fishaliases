#fishshell aliases
alias emacs 'emacs --daemon'
alias ec 'emacsclient -c'
alias e 'emacsclient -t'

switch (uname)
    case Linux
#            echo Hi Tux!
             alias pbcopy "xclip -selection clipboard"
             alias pbpaste="xclip -selection clipboard -o"
    case Darwin
#            echo Hi Hexley!
   
    case FreeBSD NetBSD DragonFly
            echo Hi Beastie!
    case '*'
            echo Hi, stranger!
end
